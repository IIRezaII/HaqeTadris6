<?xml version="1.0" encoding="utf-8"?>
 <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Fragments.PdfFragment"
             android:background="@color/orange_active">


    <EditText

            android:id="@+id/textEt"
            android:hint="@string/pdfEtHint"
            style="@style/EditTextPdf"
            android:fontFamily="@font/far_mitra"
            android:layout_width="382dp"
            android:layout_height="191dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSave" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.494" app:layout_constraintVertical_bias="0.912"/>


    <Button
            android:text="@string/genearate"
            android:src="@drawable/pdf"
            style="@style/PdfButton"
            android:id="@+id/btnSave"
            android:layout_width="147dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.873"/>


    <ImageView
            android:src="@drawable/floppy_disk"
            android:layout_width="188dp"
            android:layout_height="194dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.362"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textEt"
            app:layout_constraintVertical_bias="0.52"/>
    <ImageView
            android:src="@drawable/pdf2"
            android:layout_width="144dp"
            android:layout_height="139dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.812"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textEt"
            app:layout_constraintVertical_bias="0.86"/>
    <ImageView
            android:src="@drawable/document"
            android:layout_width="99dp"
            android:layout_height="92dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textEt"
            app:layout_constraintVertical_bias="0.893"/>



</android.support.constraint.ConstraintLayout>